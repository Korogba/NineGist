<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="zumma.com.ninegistapp.ui.activities.SelectPicture"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/select_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/pad_310dp"
                android:layout_height="@dimen/pad_350dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:contentDescription="@string/profile_image"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/picture_image"
                android:src="@drawable/ic_placeholder_image" />

            <ImageButton
                android:contentDescription="@string/upload_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pic_image_button"
                android:src="@drawable/ic_action_edit_picture"
                android:clickable="true"
                android:cropToPadding="false"
                android:padding="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="60dp"
                android:layout_alignBottom="@+id/picture_image"
                android:layout_alignRight="@+id/picture_image"
                android:layout_alignEnd="@+id/picture_image" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/picture_button_cancel"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/btn_unline" />

            <at.markushi.ui.CircleButton
                android:id="@+id/picure_button_ok"
                android:src="@drawable/ic_action_tick"
                app:cb_color="#99CC00"
                android:layout_marginLeft="25dp"
                android:layout_marginStart = "25dp"
                app:cb_pressedRingWidth="8dip"
                android:layout_width="100dip"
                android:layout_height="100dip" />

        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/pad_310dp"
            android:layout_height="@dimen/pad_350dp"
            android:layout_marginTop="@dimen/pad_10dp"
            android:contentDescription="@string/profile_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/test_view"
            android:src="@drawable/ic_placeholder_image" />
    </LinearLayout>
</ScrollView>