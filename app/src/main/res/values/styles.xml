<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar" />

    <style name="AppTheme" parent="@style/AppBaseTheme" />

    <style name="btn" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minWidth">1.0dip</item>
        <item name="android:minHeight">1.0dip</item>
    </style>

    <style name="txt_white" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/gray_dk</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/pad_10dp</item>
        <item name="android:ems">10</item>
        <item name="android:drawablePadding">@dimen/pad_10dp</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="btn_red_white" parent="@style/btn">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/main_color_red</item>
        <item name="android:padding">@dimen/pad_10dp</item>
    </style>

    <style name="txt_dk_gray" parent="@style/txt_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@color/gray_dk</item>
    </style>

    <style name="edittext_msg" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/gray_dk</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:paddingLeft">@dimen/pad_5dp</item>
        <item name="android:paddingRight">@dimen/pad_5dp</item>
        <item name="android:layout_marginLeft">@dimen/pad_5dp</item>
        <item name="android:layout_marginRight">@dimen/pad_10dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:imeActionId">100</item>
    </style>

    <style name="lbl_setting1" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/txt_16sp</item>
        <item name="android:textColor">@color/gray_dk</item>
    </style>

    <style name="lbl_setting2" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/txt_13sp</item>
        <item name="android:textColor">@color/main_color_red</item>
        <item name="android:padding">@dimen/pad_10dp</item>
    </style>

    <style name="custom_switch">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>

    <style name="img_profile">
        <item name="android:background">@drawable/pic_frame</item>
        <item name="android:padding">@dimen/pad_5dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="lbl_14gray" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:textSize">@dimen/txt_14sp</item>
        <item name="android:textColor">@color/gray_dk</item>
    </style>

    <style name="lbl_profile" parent="@style/lbl_14gray">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginRight">@dimen/pad_5dp</item>
        <item name="android:drawablePadding">@dimen/pad_3dp</item>
    </style>


</resources>
